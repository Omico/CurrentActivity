<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="enable_float_window"
        android:title="@string/enable_float_window"/>

    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="boot_completed"
        android:title="@string/boot_completed"/>

    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="open_main_activity_when_quick_start_or_quick_stop"
        android:title="@string/open_main_activity_when_quick_start_or_quick_stop"/>

    <android.support.v7.preference.ListPreference
        android:defaultValue="@string/gesture_hide_value"
        android:entries="@array/gesture_entries"
        android:entryValues="@array/gesture_values"
        android:key="gesture_click"
        android:summary="@string/gesture_click_label"
        android:title="@string/gesture_click"/>

    <android.support.v7.preference.ListPreference
        android:defaultValue="@string/gesture_copy_value"
        android:entries="@array/gesture_entries"
        android:entryValues="@array/gesture_values"
        android:key="gesture_long_press"
        android:summary="@string/gesture_long_press_label"
        android:title="@string/gesture_long_press"/>

    <android.support.v7.preference.ListPreference
        android:entries="@array/mode_entries"
        android:entryValues="@array/mode_values"
        android:key="working_mode"
        android:summary="@string/working_mode_label"
        android:title="@string/suw_working_mode"/>

    <android.support.v7.preference.Preference
        android:key="reset_setup_wizard"
        android:title="@string/reset_setup_wizard"/>

    <android.support.v7.preference.Preference
        android:key="about"
        android:title="@string/about"/>

</android.support.v7.preference.PreferenceScreen>